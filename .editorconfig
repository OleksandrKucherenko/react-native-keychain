# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
max_line_length = 100

[*.java]
max_line_length = 120
ij_visual_guides = 80,100,120
ij_java_doc_do_not_wrap_if_one_line = true
